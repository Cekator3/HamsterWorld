@model List<ProductAmountBindingModel>
<div>
    <form method="get">
        <label>Поиск:</label>
        <input name="searchFilter">
        <input hidden name="category" value=@ViewBag.Category>
        <input hidden name="storeId" value=@ViewBag.StoreId>
        <button type="submit">Применить</button>
    </form>
</div>


<div>
    @foreach (ProductAmountBindingModel product in Model)
    {
        <div class="col-lg-4" id="@product.Id">
            <img class="img-thumbnail" src="@product.PictureSrc" alt="Картинка">
            <h2>@product.ToString()</h2>
            <p>@product.Price руб.</p>
            <p>Количество: <input value=@product.Amount class="Amount"></p>
        </div>
        <div>
            <a asp-action="ManageProduct" asp-route-category=@ViewBag.Category asp-route-storeId=@ViewBag.StoreId asp-route-id=@product.Id>Изменить информацию о этом виде товара</a>
        </div>
    }
    <div class="col-lg-4">
        <a asp-action="ManageProduct" asp-route-category=@ViewBag.Category asp-route-storeId=@ViewBag.StoreId>Добавить новый вид товара</a>
    </div>
</div>