@model SignUpBindingModel;
@{
    System.Console.WriteLine(Model.Email);
}

<form asp-controller="Auth" asp-action="SignUp" method="post" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div>
        <div class="form-group">
            <label for="Login">Введите логин</label>
            <input asp-for="Login"/>
            <span asp-validation-for="Login"/>
        </div>
        <div class="form-group">
            <label for="Email">Введите электронную почту</label>
            <input asp-for="Email"/>
            <span asp-validation-for="Email"/>
        </div>
        <div class="form-group">
            <label for="Password">Введите пароль</label>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div class="form-group">
            <label for="PasswordConfirm">Повторите пароль</label>
            <input asp-for="PasswordConfirm"/>
            <span asp-validation-for="PasswordConfirm"/>
        </div>
        <img src="/Auth/GetCaptchaImg">
        <div class="form-group">
            <label for="CaptchaUserAnswer">Введите капчу</label>
            <input asp-for="CaptchaUserAnswer"/>
            <span asp-validation-for="CaptchaUserAnswer"/>
        </div>

        <button type="submit">Завершить</button>
    </div>
</form> 

<script src='@Url.Content("~/Scripts/jquery-1.8.2.js")' type='text/javascript'></script>    
<script src='@Url.Content("~/Scripts/jquery.validate.js")' type='text/javascript'>         </script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>