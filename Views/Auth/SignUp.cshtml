@model SignUpBindingModel;
@{
    ViewBag.Title = "Регистрация";
}

<form asp-controller="Auth" asp-action="SignUp" method="post" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div>
        <div class="form-group">
            <label for="Login">Введите логин</label>
            <input asp-for="Login">
            <span asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
            <label for="Email">Введите электронную почту</label>
            <input asp-for="Email">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label for="Password">Введите пароль</label>
            <input asp-for="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label for="PasswordConfirm">Повторите пароль</label>
            <input asp-for="PasswordConfirm">
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <img src="/Auth/GetCaptchaImg">
        <div class="form-group">
            <label for="CaptchaUserAnswer">Введите капчу</label>
            <input asp-for="CaptchaUserAnswer">
            <span asp-validation-for="CaptchaUserAnswer"></span>
        </div>

        <button type="submit">Завершить</button>
    </div>
</form> 