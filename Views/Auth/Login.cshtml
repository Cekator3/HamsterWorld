@model HamsterWorld.Models.LoginBindingModel;
@{
    ViewBag.Title = "Вход";
}

<div class="container">
    <form asp-controller="Auth" asp-action="Login" method="post" asp-antiforgery="true">
        <input type="hidden" readonly asp-for="ReturnUrl">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-2">
            <label for="Login">Введите логин</label>
            <input asp-for="Login" class="form-control" placeholder="Логин">
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label for="Password">Введите пароль</label>
            <input asp-for="Password" class="form-control" placeholder="Пароль">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Войти</button>
    </form> 
</div>