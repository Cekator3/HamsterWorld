@model HamsterWorld.Models.LoginBindingModel;

@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <input hidden asp-for="ReturnUrl"></input>

    <div>
        <div class="form-group">
            @Html.LabelFor(m => m.Login, labelText: "Введите логин")
            @Html.EditorFor(m => m.Login)
            <span asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, labelText: "Введите пароль")
            @Html.EditorFor(m => m.Password)
            <span asp-validation-for="Password"></span>
        </div>

        <button type="submit">Войти</button>
    </div>
}